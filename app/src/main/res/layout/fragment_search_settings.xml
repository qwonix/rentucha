<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    tools:context=".fragments.search.settings.SearchSettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:orientation="vertical">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/search_settings_where_fragment_container"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:clipChildren="false"
            app:defaultNavHost="true"
            app:navGraph="@navigation/navigation_search_settings_where" />

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/search_settings_when_fragment_container"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:clipChildren="false"
            app:defaultNavHost="true"
            app:navGraph="@navigation/navigation_search_settings_when" />

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/search_settings_who_fragment_container"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:clipChildren="false"
            app:defaultNavHost="true"
            app:navGraph="@navigation/navigation_search_settings_who" />


    </LinearLayout>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="100dp" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_gravity="bottom">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:layout_marginStart="25dp"
            android:text="Очистить всё"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="25dp"
            android:backgroundTint="#d23754"
            android:text="Искать"
            android:textAllCaps="false"
            android:textSize="16sp"
            app:icon="@drawable/ic_baseline_search_24"
            app:iconSize="25dp" />
    </com.google.android.material.card.MaterialCardView>

</FrameLayout>